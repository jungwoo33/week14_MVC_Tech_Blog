<article>
  <a href="/dashboard"><button class="button is-primary is-pulled-right">Back to Dashboard</button></a> <!-- This button will send back to localhost:3001/dashboard -->
  <h2 class="title mt-5">Edit Your Post:</h2><hr>
  <form class="edit-post-form">
    <div>
        <label for="post-title">Post Title:</label>
      <input class="input" name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div>
      <label for="post-content">Post Content:</label>
      <input class="textarea" name="post-content" type="text" value="{{post.post_content}}" />
    </div>
    <div class="is-pulled-right">
      Created by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="button is-success">save post</button>
    <button type="button" class="button is-danger delete-post-btn">delete post</button>
  </form>
</article>
<!-- 
  Insert: views/partials/comments.handlebars
  comments.handlebars will insert comments on this post
-->
{{> comments post.comments}}

<!-- 
  Then, the following javascript files will define what each button will do
--> 
<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>
<script src="/js/comment.js"></script>